        />
        <span
          class="col-start-3 col-span-3 text-3xl lg:col-start-4 lg:col-span-2 lg:text-5xl text-bold text-[#6610F2]"
        >
          Español
          <img
            src="/images/svg/global/Destacado.svg"
            alt="Imagen de destacado"
            class="w-1/2 mx-auto"
          />
        </span>

        <span
          class="col-start-9 col-span-3 text-3xl lg:col-start-8 lg:col-span-2 lg:text-5xl text-bold text-center text-[#6610F2]"
        >
          Inglés
          <img
            src="/images/svg/global/Destacado.svg"
            alt="Imagen de destacado"
            class="w-1/2 mx-auto"
          />
        </span>

        <span
          class="col-start-2 col-span-5 text-4xl lg:col-start-4 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Tabla
          <AudioPlayer
            audio_path={"/audio/td/Tabla_ESP.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
