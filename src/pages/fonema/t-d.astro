            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-8 col-span-5 text-4xl lg:col-start-8 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Tart
          <AudioPlayer
            audio_path={"/audio/td/Tart_ENG.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-2 col-span-5 text-4xl lg:col-start-4 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Decente
          <AudioPlayer
            audio_path={"/audio/td/Decente_ESP.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-8 col-span-5 text-4xl lg:col-start-7 lg:col-span-4 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Decent
          <AudioPlayer
            audio_path={"/audio/td/Decent_ENG.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-2 col-span-5 text-4xl lg:col-start-4 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Denso
          <AudioPlayer
            audio_path={"/audio/td/Denso_ESP.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-8 col-span-5 text-4xl lg:col-start-8 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
