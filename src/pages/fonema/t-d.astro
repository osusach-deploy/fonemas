        <span
          class="col-start-8 col-span-5 text-4xl lg:col-start-8 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Talent
          <AudioPlayer
            audio_path={"/audio/td/Talent_ENG.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-2 col-span-5 text-4xl lg:col-start-4 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Tacto
          <AudioPlayer
            audio_path={"/audio/td/Tacto_ESP.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-8 col-span-5 text-4xl lg:col-start-8 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Tact
          <AudioPlayer
            audio_path={"/audio/td/Tact_ENG.mp3"}
            className="w-20 h-20 lg:w-24 lg:h-24 mx-auto"
            client:load
          />
        </span>

        <span
          class="col-start-2 col-span-5 text-4xl lg:col-start-4 lg:col-span-2 lg:text-6xl text-bold text-[#6610F2] text-center mt-20"
        >
          Tarta
          <AudioPlayer
