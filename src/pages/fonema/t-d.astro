      <div class="grid grid-cols-12 gap-[15px] w-[85%] sm:w-[75%] mx-auto">
        <div
          class="col-start-5 col-span-4 lg:col-start-2 lg:col-span-2 text-center lg:mt-20 flex flex-col"
        >
          <div class="h-[200px] flex items-center justify-center">
            <!-- Altura fija para todas las imágenes -->
