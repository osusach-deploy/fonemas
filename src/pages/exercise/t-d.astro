---
import Layout from "../../layouts/Layout.astro";
import { Exercise } from "../../components/Exercise";

const text = `
<p
class="text-base text-center
sm:text-2xl"
>
    Ahora vas a <span class="text-bold">escuchar palabras</span> y <span class="text-bold">vas a seleccionar si la palabra tiene la <span class="text-[#6610F2]">letra t en ingles</span> o la <span class="text-[#6610F2]">letra t en castellano</span></span>.
</p>
`;
---

<Layout title="Ejercicios T-D" description="Ejercicios para identificar el la letra T en inglÃ©s o castellano">
    <Exercise
    fonema={"t-d"}
    routeOfFonema={"/fonema/t-d"}
    routeOfTitleSVG={"/images/svg/t-d/Ejercicios_T-D.svg"}
    text={text}
    answerA={"Ingles"}
    textAnswerA={"T en ingles"}
    answerB={"Castellano"}
    textAnswerB={"T en castellano"}
