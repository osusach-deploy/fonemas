---
import Layout from "../../layouts/Layout.astro";
import AudioPlay from "../../components/z/AudioPlay";
---

<Layout title="Fonemas exercices">
    <article class="bg-[#F4F0FF] mx-[188px]">
        <!-- Title section -->
        <section class="grid grid-cols-12 gap-4">
            <!-- Tittle image -->
            <img src="/images/svg/z/Ejercicios_s.svg" 
                alt="Titulo de ejercicios" 
                class="col-span-6 col-start-4 m-w-[571px] w-full"
                >
            <!-- Left star image -->
            <img src="/images/svg/global/Estrella.svg" 
                alt="Imagen de estrella"
                class="col-span-2 col-start-1 my-auto"
                >
            <!-- Text -->
            <p class="m-w-[615px] w-full text-[36px] text-center col-span-6 col-start-4 m-auto">
                Ahora vas a <span class="text-bold">escuchar palabras</span> y vas a 
                <span class="text-bold">seleccionar si la palabra tiene</span> 
                <span class="text-[#6610F2]">
                    s 
                    <span class="text-black text-bold">o</span>
                    z.
                </span>
            </p>
            <!-- Right star image -->
            <img src="/images/svg/global/Estrella.svg" 
                alt="Imagen de estrella"
                class="col-span-2 col-start-11 scale-x-[-1] my-auto"
                >
        </section>
        <!-- Section of question -->
        <AudioPlay client:load/>
    </article>
</Layout>