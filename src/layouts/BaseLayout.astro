---
import { Navbar } from "../components/Navbar";
const { title, description } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header>
      <Navbar client:load />
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
